<div class="modal fade" id="CreateDepartmentModal" tabindex="-1" role="dialog" aria-labelledby="CreateDepartmentModalLabel">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CreateDepartmentModalLabel">Create Department</h5>
                <button type="button" class="close closeBtnDepartment" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="closeBtnDepartment">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createDepartment" role="form" method="post" class="form-horizontal">
                    <div class="row">
                        <div class="col-sm-3">
                            <label for="name" class="control-label">Department Name</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter Department Name" required>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="closeBtn" class="btn btn-secondary closeBtnDepartment" data-dismiss="modal">Close</button>
                <button type="submit" form="createDepartment" class="btn btn-primary">Create Department</button>
            </div>
        </div>
    </div>
</div>
